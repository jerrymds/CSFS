@using CTBC.FrameWork.Util
@model CTBC.CSFS.ViewModels.WarningUnionQueryViewModel
@{
    //Layout = null;
    Layout = "~/Views/Shared/_Colorbox_Layout.cshtml";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <i class="glyphicon glyphicon-th"></i>
                <h3 class="box-title">@Lang.csfs_result_area</h3>
                @*@if (Model.WarningUnionQueryList != null)
                {
                    if (Model.WarningUnionQueryList.Any())
                    {
                        <div class="box-tools pull-right" id="pager">
                            @Ajax.Pager(Model.WarningUnionQuery.PageSize, Model.WarningUnionQuery.CurrentPage, Model.WarningUnionQuery.TotalItemCount, Model.WarningUnionQuery, new AjaxOptions() { UpdateTargetId = "divResult", HttpMethod = "Post" }, Lang.csfs_common, Lang.csfs_page, Lang.csfs_record, Model.WarningUnionQuery.SortExpression, Model.WarningUnionQuery.SortDirection)
                        </div>
                    }
                }*@
            </div>
            <div id="querytablediv" class="box-body">
                <table id="query_table" class="table table-bordered table-striped text-black sort">
                    <thead>
                        <tr class="alert-success text-center ">
                            <th>編輯</th>
                            <th>刪除</th>
                            <th>案件編號</th>
                            <th>類別</th>
                            <th>通報警局</th>
                            <th>二</th>
                            <th>165案號</th>
                            <th>案發日期/時間</th>
                            <th>案發地點</th>
                            <th>主通報</th>
                            <th>帳號</th>
                            <th>ID/統一證號</th>
                            <th>中文戶名</th>
                            <th>etabs設定警示時間</th>
                            <th>衍生警示</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.WarningUnionQueryList != null && Model.WarningUnionQueryList.Any())
                        {
                            foreach (var item in Model.WarningUnionQueryList)
                            {
                        <tr>
                            <td>
                                @*@Html.ActionLink(Convert.ToString(item.DocNo) + "-" + Convert.ToString(item.SerialNo), "Edit", "CaseWarning", new { area = "KeyInput", DocNo = item.DocNo }, new { })*@

                                <a href="@Url.Action("EditWarn", "CaseWarning", new { area = "KeyInput", SerialID = item.SerialID,@radom = DateTime.Now.ToString() })" class="fancy900_455"><i class=" glyphicon glyphicon-edit"></i></a>
                            </td>
                            <td class="text-center">
                                <a onclick='DeleteWarn("@item.SerialID","@item.DocNo","@item.NotificationSource")' style="cursor:pointer">
                                    <i class="glyphicon glyphicon-remove"></i>
                                </a>
                            </td>
                            <td>
                                @item.DocNo-@item.SerialNo
                            </td>
                            <td>@item.Kind</td>
                            <td>@item.PoliceStation</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Retry))
                                {
                                    if (item.Retry == "Y" || item.Retry == "1")
                                    {
                                        <text>Y</text>
                                    }
                                    else
                                    {
                                        <text>N</text>
                                    }
                                }
                                else
                                {
                                    <text>N</text>
                                }
                            </td>
                            <td>@item.No_165</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.HappenDateTime))
                                {
                                    <text>@DateTime.Parse(item.HappenDateTime).ToString("yyyy/MM/dd HH:mm:ss")</text>
                                    @*<text>@UtlString.FormatDateTw(item.HappenDateTime)</text>*@
                                }
                            </td>
                            <td>@item.DocAddress</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Original))
                                {
                                    if (item.Original == "Y" || item.Original == "1")
                                    {
                                        <text>Y</text>
                                    }
                                    else
                                    {
                                        <text>N</text>
                                    }
                                }
                                else
                                {
                                    <text>N</text>
                                }
                            </td>
                            <td>@item.CustAccount</td>
                            <td>
                                @Html.ActionLink(@item.CustId, "WarningCustomerInfo", "WarningUnionQuery", new { area = "Agent", custId = @item.CustId, DocNo = @item.DocNo }, new { @class = "fancy800_600" })
                            </td>
                            <td>@item.CustName</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.EtabsDatetime))
                                {
                                    <text>@UtlString.FormatDateTw(item.EtabsDatetime)</text>
                                    <text>@UtlString.FormatDateTw(item.EtabsDatetimeHour)</text>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Flag_909113))
                                {
                                    if (item.Set == "Y" || item.Set == "1")
                                    {
                                        <text>Y</text>
                                    }
                                    else
                                    {
                                        <text>N</text>
                                    }
                                }
                                else
                                {
                                    <text>N</text>
                                }
                            </td>

                        </tr>
                            }
                        }
                        else
                        {
                            <tr class="gridrow"><td colspan="15"><span class="text-red text-center">@Lang.csfs_query_nodata</span></td></tr>
                        }
                    </tbody>
                </table>
                @Html.Hidden("querystring", Model.WarningUnionQuery.SerialID)
                @Html.Hidden("querystring", Model.WarningUnionQuery.StateType)
                @Html.Hidden("querystring", Model.WarningUnionQuery.Original)
                @Html.Hidden("querystring", Model.WarningUnionQuery.RelieveDate)
                @Html.Hidden("querystring", Model.WarningUnionQuery.TX9091)
                @Html.Hidden("querystring", Model.WarningUnionQuery.TX9092)
                @Html.Hidden("querystring", Model.WarningUnionQuery.DocNo)
                @Html.Hidden("querystring", Model.WarningUnionQuery.CustId)
                @Html.Hidden("querystring", Model.WarningUnionQuery.CustAccount)
                @Html.Hidden("querystring", Model.WarningUnionQuery.BankID)
                @Html.Hidden("querystring", Model.WarningUnionQuery.ForCDate)
                @Html.Hidden("querystring", Model.WarningUnionQuery.NotificationUnit)
                @Html.Hidden("querystring", Model.WarningUnionQuery.NotificationName)
                @Html.Hidden("querystring", Model.WarningUnionQuery.ExtPhone)
                @Html.Hidden("querystring", Model.WarningUnionQuery.CustName)
                @Html.Hidden("querystring", Model.WarningUnionQuery.AccountStatus)
                @Html.Hidden("querystring", Model.WarningUnionQuery.PoliceStation)
                @Html.Hidden("querystring", Model.WarningUnionQuery.NoClosed)
                @Html.Hidden("querystring", Model.WarningUnionQuery.ModifiedDate)
                @Html.Hidden("querystring", Model.WarningUnionQuery.No_165)
                @Html.Hidden("querystring", Model.WarningUnionQuery.Kind)
                @Html.Hidden("querystring", Model.WarningUnionQuery.Set)
                @Html.Hidden("defaultSortColumn", Model.WarningUnionQuery.SortExpression)
                @Html.Hidden("defaultSort", Model.WarningUnionQuery.SortDirection)
                @Html.Hidden("TextNotNull", Lang.csfs_text_notnull)
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-2.1.3.js"></script>
<script language="javascript">
    jQuery(document).ready(function () {
        $.custPagination.BindCheckBox();
        $.custPagination.sort($("#divResult"));
    });
</script>