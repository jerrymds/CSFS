@Html.Hidden("PleaseSelect", Lang.csfs_select)
@Html.Hidden("SendAgainConfirmMsg", Lang.csfs_confirm_sendagain)
@Html.Hidden("SendAgainOKMsg", Lang.csfs_sendagain_ok)
@Html.Hidden("SendAgainFailMsg", Lang.csfs_sendagain_fail)
@Html.Hidden("SendAgainMaxMsg", Lang.csfs_sendagain_max)
@Html.Hidden("isQuery", (string)ViewBag.isQuery)
@Html.Hidden("CaseKind2Query", (string)ViewBag.CaseKind2Query)
